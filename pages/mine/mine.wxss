/* pages/mine/mine.wxss */
.f_bc{
    justify-content: space-around;
    margin: 26rpx auto;
    width: 90%;
}
.f_bc view{
    width: 45%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}
/*tab点击效果*/
.active{
  background: #fff;
  border-radius: 25rpx;
  box-shadow:0px 0px 59px 0px rgba(55,84,170,0.3);
}
.oldTitle{
    width: 94%;
    margin: 0 auto;
}
.oldTit{
    width: 90%;
    border-right: 1rpx solid #eee;
}
.oldTitTime{
    margin: 18rpx 0;
}
.oldTitList{
    justify-content: space-between;
    width: 94%;
}
.oldTitleItem{
    padding: 20rpx 0 14rpx;
    border-bottom: 1rpx solid #eee;
}
.mineRadio{
    width: 44rpx;
    height: 44rpx;
    flex-shrink: 0;
}
.placeImg{
    width: 181rpx;
    height: 162rpx;
    margin: 20% 0 23rpx;
}
.mineArrow{
    position: fixed;
    left: 40rpx;
    top: 73rpx;
    display: flex;
    width: 28rpx;
    height:28rpx;
    border-left: 4rpx solid #fff !important;
    border-top: 4rpx solid #fff !important;
    transform: rotate(-45deg);
    
}